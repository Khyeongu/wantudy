<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dev.team3.wantudy.dao.StudyDAO">
	<select id="getStudy" parameterType="int" resultType="StudyDTO">
		select *
		from study
		where no = #{study_no}
	</select>
	
	<select id="getMemberStudy" parameterType="int" resultType="StudyDTO">
		select *
		from study
		where member_no=#{member_no}
	</select>
	
	<update id="updateStudyInfo" parameterType="StudyDTO">
		update study
		set name=#{name},
			content=#{content},
			enddate=#{enddate},
			capacity=#{capacity},
			category_no=#{category_no}		
		where no=#{no}
	</update>
</mapper>
