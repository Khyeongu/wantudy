<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
      PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
   "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dev.team3.wantudy.dao.EnrollDAO">
	<select id="selectAllEnrolls" parameterType="MemberDTO" resultType="EnrollDTO">
		select * 
		from enroll
		where member_no = #{no}
	</select>
	
	<select id="selectMemberStudyEnroll" parameterType="StudyDTO" resultType="EnrollDTO">
		select status
		from enroll
		where member_no = #{member_no}
		and study_no=#{no}
	</select>
	
	<select id="getMemberCount" parameterType="int" resultType="int">
		select count(*)
		from enroll
		where study_no=#{study_no}
		and status='진행중'
	</select>
</mapper>
